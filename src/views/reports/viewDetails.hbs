<div class="container p-2 mt-2">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card crd-prf">
                <div class="card-header">
                    <h3>DETALLES DE LOS REPORTES</h3>
                </div>
                <div class="card-body">
                    {{#if reporte}}
                     <table class="table table-dark table-hover table-striped tbl-info">
                        <thead>
                            <tr>
                                <th scope="col">Cedula</th>
                                <th scope="col">Nombre del Usuario</th>
                                <th scope="col">Correo</th>
                                <th scope="col">Tel√©fono</th>
                                <th scope="col">Reporte</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            {{#each reporte}}
                            <tr>
                                <td>{{cedula}}</td>
                                <td>{{nombre}} {{apellido}}</td>
                                <td>{{correo}}</td>
                                <td>{{telefono}}</td>
                                <td>{{comentario}}</td>
                                
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                    <h3>No han reportado a ninguna empresa</h3>
                    {{/if}}
                </div>
                <div class="card-footer">
                    <a href="/reporte/viewList" class="btn btn-dark btn-block">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>