<div class="container p-2 mt-2">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card crd-prf">
                <div class="card-header">
                    <h3>Empleos agregados recientemente</h3>
                </div>
                <div class="card-body">
                     <table class="table table-dark table-hover table-striped tbl-info">
                        <thead>
                            <tr>
                                <th scope="col">Nombre de la empresa</th>
                                <th scope="col">Nombre del empleo</th>
                                <th scope="col">√Årea de trabajo</th>
                                <th scope="col">Sueldo</th>
                                <th scope="col">Fecha de registro</th>
                                <th scope="col">Fecha de vencimiento</th>
                                <th scope="col" colspan="2" class="text-center">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each empleos}}
                            <tr>
                                <td>{{nombre}}{{apellido}}</td>
                                <td>{{nombre_empleo}}</td>
                                <td>{{nombre_area}}</td>
                                <td>{{sueldo}}</td>
                                <td>{{timeago fecha_registro}}</td>
                                <td>{{timeAct fecha_vencimiento}}</td>
                                <td class="text-right"><a href="/empleo/infoJob/{{id_empleos}}" class="btn btn-dark btn-block"><i class="fa fa-eye"></i></a></td>
                                <td class="text-left"><a href="/perfil/empresa/{{id_empleos}}+{{id_empresa}}" class="btn btn-secondary btn-block"><i class="fa fa-address-book"></i></a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>