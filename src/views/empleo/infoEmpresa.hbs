<div class="container p-4">
    <div class="row">
        {{!inicio detalles generales}}
        <div class="col-md-5 mx-left">
            <div class="card crd-prf">
                <div class="card-header text-center">
                    <h3 class="text-uppercase">
                        Detalles Generales
                    </h3>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-hover table-striped tbl-info ">
                    {{#with info}}
                        <tr>
                            <td>Nombre de la empresa</td>
                            <td>{{nombre}} {{apellido}}</td>
                        </tr>
                        <tr>
                            <td>Nombre del trabajo</td>
                            <td>{{nombre_empleo}}</td>
                        </tr>
                        <tr>
                            <td>Ubicacion</td>
                            <td>{{nombre_provincia}}</td>
                        </tr>
                        <tr>
                            <td>Sueldo</td>
                            <td>{{sueldo}}</td>
                        </tr>
                    
                    </table>
                    <div class="card-fotter text-center p-2">
                        <button  value="{{id_empleos}}" class="btn btn-danger btn-delJob"><i class="fa fa-trash"></i>Eliminar empleo</button >
                        <a href="/empleo/edit/{{id_empleos}}" class="btn btn-secondary"><i class="fa fa-edit"></i> Editar datos</a>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{!SOLICITUDES RECIBIDAS}}
            <div class="card crd-prf mt-2 text-center">
                <div class="card-header ">
                    <h3>    
                        SOLICITUDES RECIBIDAS
                    </h3>
                </div>
            {{#if sol}}
                <div class="card-body p-1">
                    <table class="table table-dark table-hover table-striped tbl-info">
                        <thead>
                            <tr>
                                <th scope="col">Cédula</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Apellido</th>
                                <th scope="col" colspan="2">Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each sol}}
                            <tr>
                                <td>{{cedula}}</td>
                                <td>{{nombre}}</td>
                                <td>{{apellido}}</td>
                                <td class="text-right"><a href="/perfil/empleado/{{this.id_empleos}}+{{cedula}}" class="btn btn-dark"><i class="fa fa-eye"></i></a></td>
                                <td class="text-left"><button value="{{this.id_empleos}}+{{cedula}}" class="btn btn-danger btn-delSEmp"><i class="fa fa-trash"></i></button></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    <div class="card-footer p-0">
                        <a href="/empleo/showAllSol/{{info.id_empleos}}" class="btn btn-dark btn-block">Ver Todas</a>
                    </div>
                </div>
            {{else}}
                <div class="card-body">
                    <h5>No has recibido ninguna solicitud</h5>
                </div>
            {{/if}}
            </div>
        </div>
        {{!fin detalles generales}}

        <div class="col-md-7 mx-auto">
            <div class="card crd-prf">
            {{#with info}}
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">Información adicional</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-left">Descripción del empleo</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{descripcion}}</textarea>
                    <hr>
                    <h4 class="text-left">Requisitos</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{requisitos}}</textarea>
                    <hr>
                    <h4 class="text-left">Detalles adicionales</h4>
                    <table class="table table-dark table-hover table-striped tbl-info ">
                        
                        <tr>
                            <td>Área de trabajo</td>
                            <td>{{nombre_area}}</td>
                        </tr>
                        <tr>
                            <td>Dirección</td>
                            <td>{{direccion}}</td>
                        </tr>
                        <tr>
                            <td>Fecha de publicación</td>
                            <td>{{timeAct fecha_registro}}</td>
                        </tr>
                        <tr>
                            <td>Vencimiento de la oferta</td>
                            <td>{{timeAct fecha_vencimiento}}</td>
                        </tr>
                    </table>
                </div>
            {{/with}}
            </div>
        </div>
    
    </div>
</div>