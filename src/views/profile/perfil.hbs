
<div class="container p-4 ">
    <div class="row">
        {{#if perfil}}
        {{#with perfil}}
        <div class="col-md-5 mx-left " style="margin-bottom:8px; ">
            <div class="card crd-prf">
                <div class="card-header pb-1">
                        <h3 class="card-title text-uppercase text-center">{{nombre}} {{apellido}}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-hover table-striped tbl-info ">
                        <tr >
                            <td><b>CORREO</b></td>
                            <td>{{correo}}</td>
                        </tr>
                        <tr>
                            <td><b>CEDULA</b></td>
                            <td>{{cedula}}</td>
                        </tr>
                        <tr>
                            <td><b>TELEFONO</b></td>
                            <td>{{telefono}}</td>
                        </tr>
                        <tr>
                            <td><b>NACIMIENTO</b></td>
                            <td>{{newFecha}}</td>
                        </tr>
                        <tr>
                            <td><b>SEXO</b></td>
                            <td>{{sexo}}</td>
                        </tr>
                    </table>
                    <div class="text-center">
                    <hr>
                        <a class="btn btn-dark" href="/perfil/edit">
                            Editar perfil
                        </a>
                    </div>
                   

                </div>
            </div>
            
        </div>
        {{/with}}
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <h4>Hubo un error al mostrar su perfil</h4>
                <hr>
                <a  class="btn btn-primary m-3" href="/inicio">Volver al inicio</a>
            </div>
        </div>
        {{/if}}
        {{!Información Adicional}}
        <div class="col-md-7 mx-auto">
            <div class="card crd-prf">
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">Información adicional</h3>
                </div>
                 <div class="card-body text-center">
                    <h4 class="text-left">Habilidades Personales</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        <tr>
                                <form>
                                    <td><b>SKILL</b></td>
                                    <td><input type="text" class="field-table"></td>
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                </form>
                        </tr>
                        
                    </table> 
                    
                    
                </div>
                <div class="card-body">
                    <h4>Experiencia Laboral</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info">
                        
                        <tr>
                            <td><b>EXPERIENCIA</b></td>
                            <form>
                                
                                <td><input type="text" class="field-table"></td>
                                <td><button class="btn btn-dark btn-plus" >Add</button></td>
                            </form>
                        </tr>

                    </table>
                </div>

                <div class="card-body text-center">
                    <h4 class="text-left">Formación Academica</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        <form action="">
                            <tr >
                                <td><b>EDUCACIÓN SECUNDARIA</b></td>
                                <td><input type="text" class="field-table"></td>
                                <td><button class="btn btn-dark btn-plus" >Add</button></td>
                            </tr>
                            <tr>
                                <td><b>EDUCACIÓN SUPERIOR</b></td>
                                <td><input type="text" class="field-table"></td>
                                <td><button class="btn btn-dark btn-plus" >Add</button></td>
                            </tr>
                            <tr>
                                <td><b>MAESTRIA</b></td>
                                <td><input type="text" class="field-table"></td>
                                <td><button class="btn btn-dark btn-plus" >Add</button><a></a></td>
                            </tr>
                        </form>
                        

                    </table>
                </div>
                <div class="card-body text-center">
                    <h4 class="text-left">Certificados</h4>
                    <hr style="background-color: white;">
                    
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        
                        <tr>
                                <form>
                                    <td><b>CERTIFICADO</b></td>
                                    <td><input type="text" class="field-table"></td>
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                </form>
                        </tr>

                    </table>
                    
                </div>
                <div class="card-body text-center">
                    <h4 class="text-left">Idiomas</h4>
                    <hr style="background-color: white;">
                    
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        
                       <tr>
                                <form>
                                    <td><b>IDIOMA</b></td>
                                    <td><input type="text" class="field-table"></td>
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                </form>
                        </tr>

                    </table>
                    
                </div>


            </div>
            
            
        </div>
        
           

    </div>
</div>




<script>
    $('#displayNone').click(function(e) {
  
  // Resetear, por si acaso has estado jugando con la otra propiedad
  $('#add-skill').css('visibility', 'visible');
  
  if( $('#add-skill').is(":visible") ) {
    $('#add-skill').css('display', 'none'); 
  } else {
    $('#add-skill').css('display', 'block');
  }
});
</script>