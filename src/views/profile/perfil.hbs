<div class="container p-4 ">
    <div class="row">
        {{#if perfil}}
        {{#with perfil}}
        <div class="col-md-5 mx-left " style="margin-bottom:8px; ">
            <div class="card crd-prf">
                <div class="card-header pb-1">
                        <h3 class="card-title text-uppercase text-center">{{nombre}} {{apellido}}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-hover table-striped tbl-info ">
                        <tr >
                            <td><b>CORREO</b></td>
                            <td>{{correo}}</td>
                        </tr>
                        <tr>
                            <td><b>CEDULA</b></td>
                            <td>{{cedula}}</td>
                        </tr>
                        <tr>
                            <td><b>TELEFONO</b></td>
                            <td>{{telefono}}</td>
                        </tr>
                        <tr>
                            <td><b>NACIMIENTO</b></td>
                            <td>{{newFecha}}</td>
                        </tr>
                        <tr>
                            <td><b>SEXO</b></td>
                            <td>{{sexo}}</td>
                        </tr>
                    </table>
                    <div class="text-center">
                    <hr>
                        <a class="btn btn-dark" href="/perfil/edit">
                            <i class="fa fa-edit"></i> Editar perfil
                        </a>
                    </div>
                </div>
            </div>
            
        </div>
        {{/with}}
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <h4>Hubo un error al mostrar su perfil</h4>
                <hr>
                <a  class="btn btn-primary m-3" href="/inicio">Volver al inicio</a>
            </div>
        </div>
        {{/if}}
        {{!Información Adicional}}
        <div class="col-md-7 mx-auto">
            <div class="card crd-prf">
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">Información adicional</h3>
                </div>
                 <div class="card-body text-center">
                    <h4 class="text-left">Habilidades Personales</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        {{#each skill}}
                        <tr>
                            <td>{{nombre_skill}}</td>
                            <td></td>
                            <td><a class="fa fa-eraser fa-lg btn-del" href="/perfil/delValue/skill+{{id_skill}}"></a></td>
                        </tr>
                        {{/each}}
                        <tr>
                                <form action="/perfil/addValue/skill" method="post">
                                    <td><b>SKILL</b></td>
                                    <td><input type="text" class="field-table" name="value" ></td>
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                </form>
                        </tr>
                        
                    </table> 
                    
                    
                </div>
                {{!Experiencia}}
                <div class="card-body">
                    <h4>Experiencia Laboral</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info">
                        {{#each exp}}
                        <tr>
                            <td>{{nombre_experiencia}}</td>
                            <td></td>
                            <td><a class="fa fa-eraser fa-lg btn-del" href="/perfil/delValue/experiencia+{{id_exp}}"></a></td>
                        </tr>
                        {{/each}}
                        <tr>
                            <form action="/perfil/addValue/experiencia" method="post">
                                <td><b>EXPERIENCIA</b></td>
                                <td><input type="text" class="field-table" name="value" required></td>
                                <td><button class="btn btn-dark btn-plus" >Add</button></td>
                            </form>
                        </tr>

                    </table>
                </div>
                {{!Formacion Academica}}
                <div class="card-body text-center">
                    <h4 class="text-left">Formación Academica</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                            <tr >
                                <form action="/perfil/addValue/forma" method="post">
    
                                    <td><b>EDUCACIÓN SECUNDARIA</b></td>
                                    {{#if f1}}
                                    <td>{{f1.nombre_formA}}</td>
                                    <td><a class="fa fa-eraser fa-lg btn-del" href="/perfil/delValue/forma+{{f1.id_formA}}"></a></td>
                                    {{else}}
                                    <td><input  type="text" class="field-table" name="value" required></td>
                                    <input type="hidden" value="1" name="nivel">
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                    {{/if}}
                                </form>
                            </tr>
                            <tr>
                                <form action="/perfil/addValue/forma" method="post"> 
                                    <td><b>EDUCACIÓN SUPERIOR</b></td>
                                    {{#if f2}}
                                    <td>{{f2.nombre_formA}}</td>
                                    <td><a class="fa fa-eraser fa-lg btn-del" href="/perfil/delValue/forma+{{f2.id_formA}}"></a></td>
                                    {{else}}
                                    <td><input type="text" class="field-table" name="value" required></td>
                                    <input type="hidden" value="2" name="nivel" >
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                    {{/if}}
                                </form>
                            </tr>
                            <tr>
                                <form action="/perfil/addValue/forma" method="post">
                                    <td><b>MAESTRIA</b></td>
                                    {{#if f3}}
                                    <td>{{f3.nombre_formA}}</td>
                                    <td><a class="fa fa-eraser fa-lg btn-del" href="/perfil/delValue/forma+{{f3.id_formA}}"></a></td>
                                    {{else}}
                                    <td><input type="text" class="field-table" name="value" required></td>
                                    <input type="hidden" value="3" name="nivel" >
                                    <td><button class="btn btn-dark btn-plus" >Add</button><a></a></td>
                                    {{/if}}
                                </form>
                                
                            </tr>
                        

                    </table>
                </div>
                <div class="card-body text-center">
                    <h4 class="text-left">Certificados</h4>
                    <hr style="background-color: white;">
                    
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        {{#each cert}}
                        <tr>
                            <td>{{nombre_certificados}}</td>
                            <td></td>
                            <td><a class="fa fa-eraser fa-lg btn-del" href="/perfil/delValue/certificados+{{id_certificados}}"></a></td>
                        </tr>
                        {{/each}}
                        <tr>
                                <form action="/perfil/addValue/certificados" method="post">
                                    <td><b>CERTIFICADO</b></td>
                                    <td><input type="text" class="field-table" name="value" required></td>
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                </form>
                        </tr>

                    </table>
                    
                </div>
                <div class="card-body text-center">
                    <h4 class="text-left">Idiomas</h4>
                    <hr style="background-color: white;">
                    
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        {{#each idiomas}}
                        <tr>
                            <td>{{nombre_idiomas}}</td>
                            <td></td>
                            <td><a class="fa fa-eraser fa-lg btn-del" href="/perfil/delValue/idiomas+{{id_idiomas}}"></a></td>
                        </tr>
                        {{/each}}
                       <tr>
                                <form action="/perfil/addValue/idiomas" method="post">
                                    <td><b>IDIOMA</b></td>
                                    <td><input type="text" class="field-table" name="value"></td>
                                    <td><button class="btn btn-dark btn-plus" >Add</button></td>
                                </form>
                        </tr>
                    </table>      
                </div>
            </div>
        </div>
    </div>
</div>



