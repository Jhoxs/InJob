<div class="container p-4 ">
    <div class="row">
        {{#if perfil}}
        {{#with perfil}}
        <div class="col-md-5 mx-left " style="margin-bottom:8px; ">
            <div class="card crd-prf">
                <div class="card-header pb-1">
                        <h3 class="card-title text-uppercase text-center">{{nombre}} {{apellido}}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-hover table-striped tbl-info ">
                        <tr >
                            <td><b>CORREO</b></td>
                            <td>{{correo}}</td>
                        </tr>
                        <tr>
                            <td><b>CEDULA</b></td>
                            <td>{{cedula}}</td>
                        </tr>
                        <tr>
                            <td><b>TELEFONO</b></td>
                            <td>{{telefono}}</td>
                        </tr>
                        <tr>
                            <td><b>NACIMIENTO</b></td>
                            <td>{{newFecha}}</td>
                        </tr>
                        <tr>
                            <td><b>SEXO</b></td>
                            <td>{{sexo}}</td>
                        </tr>
                    </table>
                    <div class="text-center">
                    </div>
                </div>
            </div>
            <div class="card crd-prf mt-2 text-center">
                <div class="card-header ">
                    <h3>    
                        OPCIONES
                    </h3>
                </div>
                <div class="card-body">
                    <a href="/empleo/showSolEmpresa/{{id_empleos}}" class="btn btn-dark mb-2 btn-block"><i class="fa fa-search"></i> Volver a información detallada</a>
                    <a href="/empleo/showAllSol/{{id_empleos}}" class="btn btn-secondary mb-2 btn-block"><i class="fa fa-list"></i> Volver a lista de solicitudes</a>
                    <hr style="background-color: rgba(255, 255, 255, 0.253);">
                    <button value="{{id_empleos}}+{{cedula}}" class="btn btn-success mb-2 btn-block btn-accEmp"><i class="fa fa-check-circle"></i> Aceptar Solicitud de {{nombre}} {{apellido}}</button>
                    <button value="{{id_empleos}}+{{cedula}}" class="btn btn-danger btn-delSEmp btn-block"><i class="fa fa-trash"></i> Eliminar Solicitud</button>
                </div>
            </div> 
        </div>
        
        {{/with}}
        {{else}}
        <div class="col-md-5 mx-auto">
            <div class="card crd-prf text-center">
                <div class="card-header">
                    <h3>Error</h3>
                </div>
                <div class="card-body">
                    <h4>Hubo un error al mostrar su perfil</h4>
                    <hr>
                    <a  class="btn btn-primary m-3" href="/inicio">Volver al inicio</a>
                </div>
            </div>
        </div>
        {{/if}}
        {{!Información Adicional}}
        <div class="col-md-7 mx-auto">
            <div class="card crd-prf">
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">Información adicional</h3>
                </div>
                 <div class="card-body text-center">
                    <h4 class="text-left">Habilidades Personales</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        {{#if skill}}
                        {{#each skill}}
                        <tr>
                            <td>{{nombre_skill}}</td>
                        </tr>
                        {{/each}}
                        {{else}}
                        <h3>{{perfil.nombre}} no añadió ninguna habilidad personal</h3>
                        {{/if}}
                    </table> 
                </div>
                {{!Experiencia}}
                <div class="card-body">
                    <h4>Experiencia Laboral</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info">
                        {{#if exp}}
                        {{#each exp}}
                        <tr>
                            <td>{{nombre_experiencia}}</td>
                        </tr>
                        {{/each}}
                        {{else}}
                            <h3 class="text-center">{{perfil.nombre}} no añadió ninguna experiencia laboral</h3>
                        {{/if}}
                    </table>
                </div>
                {{!Formacion Academica}}
                <div class="card-body text-center">
                    <h4 class="text-left">Formación Academica</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                            <tr >
                                <td><b>EDUCACIÓN SECUNDARIA</b></td>
                                {{#if f1}}
                                <td>{{f1.nombre_formA}}</td>
                                {{else}}
                                <td>No se agregó ninguna educación secundaria</td>
                                {{/if}}
                            </tr>
                            <tr>
                                <td><b>EDUCACIÓN SUPERIOR</b></td>
                                {{#if f2}}
                                <td>{{f2.nombre_formA}}</td>
                                {{else}}
                                <td>No se agrego ninguna educación superior</td>
                                {{/if}}
                            </tr>
                            <tr>
                                <td><b>MAESTRIA</b></td>
                                {{#if f3}}
                                <td>{{f3.nombre_formA}}</td>
                                {{else}}
                                <td>No se agrego ninguna maestria</td>
                                {{/if}}
                            </tr>         
                    </table>
                </div>
                <div class="card-body text-center">
                    <h4 class="text-left">Certificados</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        {{#if cert}}
                        {{#each cert}}
                        <tr>
                            <td>{{nombre_certificados}}</td>
                        </tr>
                        {{/each}}
                        {{else}}
                            <h3 class="text-center">{{perfil.nombre}} no añadió ningun certificado</h3>
                        {{/if}}
                    </table>
                </div>
                <div class="card-body text-center">
                    <h4 class="text-left">Idiomas</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info text-left">
                        {{#if idiomas}}
                        {{#each idiomas}}
                        <tr>
                            <td>{{nombre_idiomas}}</td>
                        </tr>
                        {{/each}}
                       {{else}}
                            <h3 class="text-center">{{perfil.nombre}} no añadió ningun idioma</h3>
                        {{/if}}
                    </table>      
                </div>
            </div>
        </div>
    </div>
</div>

