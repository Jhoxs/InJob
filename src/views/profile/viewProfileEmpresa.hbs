<div class="container p-4 ">
    <div class="row">
        {{#if perfil}}
        
        <div class="col-md-5 mx-left " style="margin-bottom:8px; ">
            {{#with perfil}}
            <div class="card crd-prf">
                <div class="card-header pb-1">
                        <h3 class="card-title text-uppercase text-center">{{nombre}} {{apellido}}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-hover table-striped tbl-info ">
                        <tr >
                            <td><b>CORREO</b></td>
                            <td>{{correo}}</td>
                        </tr>
                        <tr>
                            <td><b>TELEFONO</b></td>
                            <td>{{telefono}}</td>
                        </tr>
                        <tr>
                            <td><b>FECHA DE FUNDACION</b></td>
                            <td>{{timeAct nacimiento}}</td>
                        </tr>
                    </table>
                </div>
            </div>
            {{/with}}
            {{!inicio card OPCIONES}}
            <div class="card crd-prf mt-2 text-center">
                <div class="card-header ">
                    <h3>    
                        OPCIONES
                    </h3>
                </div>
                {{#if vista}}
                <div class="card-body">
                    <a href="/reporte/viewList" class="btn btn-secondary btn-block"><i class="fa fa-list"></i> Volver a la lista</a>
                </div>
                {{else}}
                <div class="card-body">
                    <a href="/empleo/infoJob/{{perfil.id_empleos}}" class="btn btn-secondary mb-2 btn-block"><i class="fa fa-info-circle"></i> Volver a información de empleo {{nombre}} {{apellido}}</a>
                    <a href="/viewListRec" class="btn btn-secondary btn-block"><i class="fa fa-list"></i> Volver a lista de empleos</a>
                    {{#unless reporte}}
                    <hr style="background-color: rgba(255, 255, 255, 0.253);">
                    <button value="{{perfil.id_empleos}}+{{perfil.cedula}}" id="btn-repEmp" class="btn btn-danger btn-block"><i class="fa fa-exclamation-triangle"></i> Reportar empresa</button>
                    {{/unless}}
                    {{#unless calificacion}}
                    <button value="{{perfil.id_empleos}}+{{perfil.cedula}}" id="btn-valEmp" class="btn btn-warning btn-block" style="color: white;"><i class="fa fa-star"></i>Valorar empresa</button>
                    {{/unless}} 
                    
                </div>
                {{/if}}
            </div>
            {{!Fin card opciones}}
            {{else}}
            <div class="col-md-5 mx-auto">
                <div class="card crd-prf text-center">
                    <div class="card-header">
                        <h3>Error</h3>
                    </div>
                    <div class="card-body">
                        <h4>Hubo un error al mostrar su perfil</h4>
                        <hr>
                        <a  class="btn btn-primary m-3" href="/inicio">Volver al inicio</a>
                    </div>
                </div>
            </div>
            {{/if}} 
        </div>        
        {{!Información Adicional}}
        <div class="col-md-7 mx-auto">
             <div class="card crd-prf mb-2">
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">
                        Valoracion de empresa
                    </h3>
                </div>
               <div class="card-body">
                    <table class="table table-dark table-hover table-striped tbl-info">
                        <tr>
                            <td>Valoración acumulada de la empresa</td>
                            {{#if valoracion}}
                            <td>{{valoracion.res}}</td>
                            {{else}}
                            <td>La empresa no ha sido valorada</td>
                            {{/if}}
                        </tr>
                        <tr>
                            <td>Veces que la empresa fue reportada</td>
                            {{#if numRep}}
                                <td>{{numRep}}</td>
                            {{else}}
                            <td>Felicidades tu empresa no ha sido reportada</td>
                            {{/if}}
                        </tr>
                    </table>
                </div>
            </div>
            <div class="card crd-prf">
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">Información adicional</h3>
                </div>
                {{#if infoAdd}}
                {{#with infoAdd}}
                <div class="card-body">
                    <h4 class="text-left">Misión</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{mision}}</textarea>
                    <hr>
                    <h4 class="text-left">Visión</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{vision}}</textarea>
                    <hr>
                    <h4 class="text-left">Certificados</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{certificados}}</textarea>
                    <hr>
                    <h4>Otra Información</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info">
                        <tr>
                            <td>RUC</td>
                            <td>{{ruc}}</td>
                        </tr>
                    </table>                    
                </div>
                {{/with}}
                {{else}}
                <div class="card-body text-center">
                    <h3>No se ha añadido información adicional</h3>
                </div>
                {{/if}}
            </div>
            
           
        </div>
    </div>
</div>