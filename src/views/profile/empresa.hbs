<div class="container p-4 ">
    <div class="row">
        {{#if perfil}}
        {{#with perfil}}
        <div class="col-md-5 mx-left " style="margin-bottom:8px; ">
            <div class="card crd-prf">
                <div class="card-header pb-1">
                        <h3 class="card-title text-uppercase text-center">{{nombre}} {{apellido}}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-dark table-hover table-striped tbl-info ">
                        <tr >
                            <td><b>CORREO</b></td>
                            <td>{{correo}}</td>
                        </tr>
                        <tr>
                            <td><b>CEDULA</b></td>
                            <td>{{cedula}}</td>
                        </tr>
                        <tr>
                            <td><b>TELEFONO</b></td>
                            <td>{{telefono}}</td>
                        </tr>
                        <tr>
                            <td><b>NACIMIENTO</b></td>
                            <td>{{timeAct nacimiento}}</td>
                        </tr>
                        <tr>
                            <td><b>SEXO</b></td>
                            <td>{{sexo}}</td>
                        </tr>
                    </table>
                    <div class="text-center">
                    <hr>
                        <a class="btn btn-dark" href="/perfil/edit">
                            <i class="fa fa-edit"></i> Editar perfil
                        </a>
                    </div>
                </div>
            </div>
            
        </div>
        {{/with}}
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <h4>Hubo un error al mostrar su perfil</h4>
                <hr>
                <a  class="btn btn-primary m-3" href="/inicio">Volver al inicio</a>
            </div>
        </div>
        {{/if}}
        {{!Información Adicional}}
        <div class="col-md-7 mx-auto">
            <div class="card crd-prf">
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">Información adicional</h3>
                </div>
                {{#if infoAdd}}
                {{#with infoAdd}}
                <div class="card-body">
                    <h4 class="text-left">Misión</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{mision}}</textarea>
                    <hr>
                    <h4 class="text-left">Visión</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{vision}}</textarea>
                    <hr>
                    <h4 class="text-left">Certificados</h4>
                    <hr style="background-color: white;">
                    <textarea class="form-control txt-trab text-left" readonly>{{certificados}}</textarea>
                    <hr>
                    <h4>Otra Información</h4>
                    <hr style="background-color: white;">
                    <table class="table table-dark table-hover table-striped tbl-info">
                        <tr>
                            <td>RUC</td>
                            <td>{{ruc}}</td>
                        </tr>
                    </table>
                    <br>
                    <div class="text-center">
                        <a href="/perfil/editEmpresa" class="btn btn-dark"><i class="fa fa-edit"></i> Editar Información Adicional</a>
                    </div>
                    
                </div>
                {{/with}}
                {{else}}
                <div class="card-body text-center">
                    <h3>No se ha añadido información adicional</h3>
                    <hr>
                    <a href="/perfil/addInfoEmp" class="btn btn-secondary">
                        Agregar
                    </a>
                </div>
                {{/if}}
            </div>
            <div class="card crd-prf mt-2">
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">
                        Valoracion de empresa
                    </h3>
                </div>
                {{#if valoracion}}
                <div class="card-body">

                </div>
                {{else}}
                <div class="card-body text-center">
                    <h3>La empresa aún no ha recibido ninguna valoración</h3>
                    <hr>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>