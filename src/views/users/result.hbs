<div class="container p-4">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card crd-prf">
                {{#if resUser}}
                {{#with resUser}}
                <div class="card-header">
                    <h3 class="card-title text-uppercase text-center">{{nombre}} {{apellido}}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-striped table-dark">
                        <tr>
                            <td><b>CORREO</b></td>
                            <td>{{correo}}</td>
                        </tr>
                        <tr>
                            <td><b>CEDULA</b></td>
                            <td>{{cedula}}</td>
                        </tr>
                        <tr>
                            <td><b>TELEFONO</b></td>
                            <td>{{telefono}}</td>
                        </tr>
                        <tr>
                            <td><b>SEXO</b></td>
                            <td>{{sexo}}</td>
                        </tr>
                        <tr>
                            <td><b>ROL</b></td>
                            <td>{{rol}}</td>
                        </tr>
                    </table>
                    <hr>
                    <div class="text-center">
                        <a class="btn btn-secondary" href="/usuarios/search">
                            Nueva Busqueda
                        </a>
                        
                        <a class="btn btn-dark" href="/usuarios/edit/{{cedula}}">
                            Editar Datos
                        </a>
                        <button  class="btn btn-danger btn-eUser" value="{{cedula}}">
                            Eliminar Usuario
                        </button>
                    </div>
                </div>
                {{/with}}
                    {{else}}
                    <h3>No se ha encotrado un usuario con esos datos</h3>
                    <hr>
                    <a class="btn btn-dark" href="/usuarios/search">Realizar nueva busqueda</a>
                    {{/if}}
            </div>
        </div>
    </div>
</div>
